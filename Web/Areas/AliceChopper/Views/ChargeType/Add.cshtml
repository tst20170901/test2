@model Models.ChargeType
@{
    Layout = "~/Areas/AliceChopper/Views/Shared/_AdminLayout.cshtml";
}
@section header{
    <script type="text/javascript">
        function checkForm() {
            if ($("#Title").val() == "") {
                alert("套餐名称不能为空！");
                return false;
            }
            return true;
        }
    </script>
}
@section body{
    @using (Html.BeginForm())
    {<table class="frm">
        <tr>
            <td colspan="2" class="pagetit">
                <h1>
                    添加充值套餐
                </h1>
            </td>
        </tr>
        <tr>
            <th>
                套餐名称
            </th>
            <td>
                @Html.TextBoxFor(x => x.Title, new { @class = "txt", style = "width:200px" })<span style="color: #f00">*@Html.ValidationMessageFor(model => model.Title)</span>
            </td>
        </tr>
        <tr>
            <th>
                套餐价格
            </th>
            <td>
                @Html.TextBoxFor(x => x.Price, new { @class = "txt", style = "width:200px" })
            </td>
        </tr>
         <tr>
             <th>
                 赠送金额
             </th>
             <td>
                 @Html.TextBoxFor(x => x.GivePrice, new { @class = "txt", style = "width:200px" })
             </td>
         </tr>
        <tr>
            <th>
                赠送礼品
            </th>
            <td>
                @Html.TextBoxFor(x => x.Remark, new { @class = "txt", style = "width:200px" })
            </td>
        </tr>
        <tr>
            <th>

            </th>
            <td>
                <input id="btnSure" class="btn" type="submit" value="确定" onclick="return checkForm();" />
            </td>
        </tr>
    </table>}}
