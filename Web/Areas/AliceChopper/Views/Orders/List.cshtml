@model Web.Areas.Models.ListModel
@{
    Layout = "~/Areas/AliceChopper/Views/Shared/_AdminLayout.cshtml";
}
@section header{<link type="text/css" href="@Url.Content("~/Content/css/grid.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/my97datepicker/WdatePicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.cookie.js")"></script>}
@section body{
    <div class="bdcon">
        <div class="btnbartitle">
            <div>
                订单管理
            </div>
        </div>
        <div class="tools_bar">
            <a title="刷新当前页面" onclick="Replace();" class="tools_btn">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/arrow_refresh.png")') 50% 4px no-repeat;">
                        刷新
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
            <a title="热力图" class="tools_btn" onclick="Add('@Url.Action("PointList")')">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/record_red.png")') 50% 4px no-repeat;">
                        热力图
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
            <a title="关闭当前窗口" onclick="ThisCloseTab();" class="tools_btn">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/back.png")') 50% 4px no-repeat;">
                        离开
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
        </div>
        <div class="btnbarcontetn" style="margin-top: 1px; background: #fff">
            <div>
                @using (Html.BeginForm("List", "Orders", new RouteValueDictionary { { "id", "" } }, FormMethod.Get))
                {
                    <table border="0" class="frm-find" style="height: 45px;">
                        <tr>
                            <th>
                                用户姓名
                            </th>
                            <td>
                                @Html.TextBox("txtUserName", AliceDAL.UrlParam.GetStringValue("txtUserName"), new { @class = "txt", style = "width:100px" })
                            </td>
                            <th>
                                手机号
                            </th>
                            <td>
                                @Html.TextBox("txtMobile", AliceDAL.UrlParam.GetStringValue("txtMobile"), new { @class = "txt", style = "width:100px" })
                            </td>
                            @{
                    if (WorkContext.RoleID == 1)
                    {
                        <text>
                            <th>
                                分公司
                            </th>
                            <td>
                                <select class="ddl" id="BranchID" name="BranchID">
                                    <option @if (0 == AliceDAL.UrlParam.GetIntValue("BranchID")) { <text> selected="selected" </text>             } value="0">请选择</option>
                                    @{
List<Models.BD_Branch> list = ViewData["branchlist"] as List<Models.BD_Branch>;
if (list != null)
{
    foreach (Models.BD_Branch item in list)
    {
        <option @if (item.ID == AliceDAL.UrlParam.GetIntValue("BranchID")) { <text> selected="selected" </text>             } value="@item.ID">@item.Title</option>
    }
}
                                    }
                                </select>
                            </td></text>
                    }
                            }
                            <th>
                                状态
                            </th>
                            <td>
                                <select class="ddl" id="ddlState" name="ddlState">
                                    @{
                                        <option @if ("10" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="10">支付完成</option>
                                        <option @if ("0" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="0">等待支付</option>
                                        <option @if ("30" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="30">派单完成</option>
                                        <option @if ("50" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="50">洗车开始</option>
                                        <option @if ("70" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="70">洗车完成</option>
                                        <option @if ("90" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="90">已取消</option>
                                        <option @if ("110" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="110">已删除</option>
                                        <option @if ("130" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>       } value="130">已作废</option>
                                        <option @if ("" == AliceDAL.UrlParam.GetStringValue("ddlState")) { <text> selected="selected" </text>      } value="">全部订单</option>
                                    }
                                </select>
                            </td>
                            <th>日期</th>
                            <td>
                                @Html.TextBox("txtSDate", AliceDAL.UrlParam.GetStringValue("txtSDate"), new { css = "txt1", style = "width:130px", onfocus = "WdatePicker({el:'txtSDate'})" })至 @Html.TextBox("txtEDate", AliceDAL.UrlParam.GetStringValue("txtEDate"), new { css = "txt1", style = "width:130px", onfocus = "WdatePicker({el:'txtEDate'})" })
                            </td>
                            <td>
                                <input type="submit" id="btnSearch" name="btnSearch" class="btnSearch" value="搜索" />
                                <input type="submit" id="btnSearch1" name="btnSearch" class="btnSearch" value="导出表格" />
                            </td>
                            <th>自动刷新&nbsp;&nbsp;<input type="checkbox" value="1" id="autoLoadOrderList" /></th>
                            <td>
                                <a href="/AliceChopper/Orders/List" id="lookOrderList" style="color:Red; font-size:14px; display:none;">新订单,点击查看</a>
                                <script type="text/javascript">
                                    var oid = 0;
                                    var timeoutId = null;
                                    function loadOrderList() {
                                        $.get("/AliceChopper/Orders/AjaxList?oid=" + oid + "&time=" + new Date(), function (data) {
                                            if (parseInt(data) > 0) {
                                                oid = parseInt(data);
                                                $("#lookOrderList").attr("style", "color:Red;font-size:14px;");
                                                if (timeoutId != null)
                                                    window.clearInterval(timeoutId);
                                            }

                                        })
                                    }
                                    function loadMaxOid() {
                                        $.get("/AliceChopper/Orders/AjaxList?oid=" + oid + "&time=" + new Date(), function (data) {
                                            if (parseInt(data) > 0) {
                                                oid = parseInt(data);
                                            }
                                        })
                                    }

                                    $(function () {
                                        loadMaxOid();
                                        $("#autoLoadOrderList").click(function () {
                                            if (this.checked) {
                                                $.cookie("autoLoadOrderList", "1", { expires: 1000 });
                                                timeoutId = window.setInterval(loadOrderList, 5000);
                                            }
                                            else {
                                                $.cookie("autoLoadOrderList", null);
                                                if (timeoutId != null)
                                                    window.clearInterval(timeoutId);
                                            }
                                        })
                                        if ($.cookie("autoLoadOrderList") == "1") {
                                            $("#autoLoadOrderList").attr("checked", "true");
                                            timeoutId = window.setInterval(loadOrderList, 5000);
                                        }
                                    })
                                </script>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div class="dgvlist">
            <table class="gv" cellspacing="0" id="gv" style="border-collapse: collapse;">
                <tr class="gvHeader" style="white-space: nowrap;">
                    <th scope="col">
                        订单编号
                    </th>
                    <th scope="col">
                        订单总额
                    </th>
                    <th scope="col">
                        洗车工
                    </th>
                    <th scope="col">
                        下单时间
                    </th>
                    <th scope="col">
                        服务点
                    </th>
                    <th scope="col">
                        用户姓名
                    </th>
                    <th scope="col">
                        联系电话
                    </th>
                    <th scope="col">
                        订单状态
                    </th>
                    <th scope="col">
                        支付方式
                    </th>
                    <th scope="col">
                        编辑操作
                    </th>
                </tr>
                @foreach (DataRow item in Model.Page)
                {
                    Models.UserOrderState uos = (Models.UserOrderState)AliceDAL.DataType.ConvertToInt(item["OrderState"].ToString());

                    <tr class="gvRow">
                        <td align="left" style="width:160px">
                            &nbsp;&nbsp;<a href="@Url.Action("OrderInfo", "Orders", new { oid = @item["ID"].ToString() })">@item["Osn"].ToString()</a>
                        </td>
                        <td align="left">
                            &nbsp;&nbsp;@item["Amount"].ToString() @(item["DiscountDes"].ToString() != "" ? "(" + item["DiscountDes"].ToString() + "共优惠" + item["DiscountAmount"].ToString() + ")" : "") 明细： @Web.Units.Comm.GetItem(item["ID"].ToString()) &nbsp;&nbsp;@(item["Data3"].ToString() == "" ? "<span style='color:#047548'>线上</span>" : "<span style='color:#F00'>" + @item["Data3"].ToString() + "</span>")<br />&nbsp;&nbsp;<span style="font-size:12px;color:#666">@item["Address"].ToString()</span>
                        </td>
                        <td style="width: 100px">
                            @Web.Units.Comm.GetWorkName(item["WorkID"].ToString())
                        </td>
                        <td style="width: 100px">
                            @AliceDAL.DataType.ConvertToDateTimeStr(item["CDate"].ToString())
                        </td>
                        <td align="center" style="width: 100px"><!--mg add 服务点信息-->
                            @{
                                List<Models.BD_Branch> list = ViewData["branchlist"] as List<Models.BD_Branch>;
                                if (list != null)
                                {
                                    foreach (Models.BD_Branch item2 in list)
                                    {
                                        if (item2.ID.ToString() == item["StoreID"].ToString()) 
                                        {
                                            @item2.Title
                                            break;
                                        }                                                                
                                    }
                                }
                            }                           
                        </td>
                        <td align="center" style="width: 100px">
                            @item["UserName"].ToString()
                        </td>
                        <td align="center" style="width: 100px">
                            @item["Mobile"].ToString()
                        </td>
                        <td align="center" style="width: 100px">
                            @switch (uos)
                            {
                                case Models.UserOrderState.WaitPaying:
                                    @:等待支付
                                            break;
                                case Models.UserOrderState.Payed: @:
                                            <span style="color:#047548">支付成功</span>
                                            break;
                                case Models.UserOrderState.Assigned:
                                @:<span style="color:#ff6a00">派单完成</span>
                                    break;
                                case Models.UserOrderState.Started:
                                @:<span style="color:#b6ff00">开始洗车</span>
                                    break;
                                case Models.UserOrderState.Finished:
                                @:<span style="color:#00F">洗车完成</span>
                                    break;
                                case Models.UserOrderState.Canceled:
                                @:<span style="color:#CCC">已取消</span>
                                    break;
                                case Models.UserOrderState.Deleted:
                                @:<span style="color:#CCC">已删除</span>
                                    break;
                                case Models.UserOrderState.Void:
                                @:<span style="color:#CCC">已作废</span>
                            break;
                                default:
                            break;
                            }
                        </td>
                        <td align="center" style="width: 80px">
                            @item["PayName"].ToString()
                        </td>
                        <td style="width: 100px">
                            @Html.ActionLink("查看", "OrderInfo", new { oid = item["ID"] }, new { @class = "abtn edit" })
                        </td>
                    </tr>
                }
            </table>
            <div>
                @Html.Pager(Model.Page, new PagerOptions { PageIndexParameterName = "page", PagerItemsSeperator = "", CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>", ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false }, new { id = "badoopager" })
                @{Html.RegisterMvcPagerScriptResource();}
            </div>
        </div>
    </div>
}
