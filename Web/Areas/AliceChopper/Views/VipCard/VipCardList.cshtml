@model Web.Areas.Models.ListModel
@{
    Layout = "~/Areas/AliceChopper/Views/Shared/_AdminLayout.cshtml";
}
@section header{<link type="text/css" href="@Url.Content("~/Content/css/grid.css")" rel="stylesheet" />
}
@section body{
    <div class="bdcon">
        <div class="btnbartitle">
            <div>
                商家会员卡管理
            </div>
        </div>
        <div class="tools_bar">
            <a title="刷新当前页面" onclick="Replace();" class="tools_btn">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/arrow_refresh.png")') 50% 4px no-repeat;">
                        刷新
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
            <a title="单加" class="tools_btn" onclick="Add('@Url.Action("VipCardAdd")');">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/application_add.png")') 50% 4px no-repeat;">
                        单加
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
            <a title="批加" class="tools_btn" onclick="Add('@Url.Action("VipCardBatchAdd")');">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/application_add.png")') 50% 4px no-repeat;">
                        批加
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
            <a title="关闭当前窗口" onclick="ThisCloseTab();" class="tools_btn">
                <span>
                    <b style="background: url('@Url.Content("~/Content/images/16/back.png")') 50% 4px no-repeat;">
                        离开
                    </b>
                </span>
            </a><div class="tools_separator">
            </div>
        </div>
        <div class="btnbarcontetn" style="margin-top: 1px; background: #fff">
            <div>
                @using (Html.BeginForm("VipCardList", "VipCard", new RouteValueDictionary { { "id", "" } }, FormMethod.Get))
                {
                    <table border="0" class="frm-find" style="height: 45px;">
                        <tr>
                            <th>
                                卡号
                            </th>
                            <td>
                                @Html.TextBox("txtCardNo", AliceDAL.UrlParam.GetStringValue("txtCardNo"), new { @class = "txt", style = "width:100px" })
                            </td>
                            <th>
                                名称
                            </th>
                            <td>
                                @Html.TextBox("txtTitle", AliceDAL.UrlParam.GetStringValue("txtTitle"), new { @class = "txt", style = "width:100px" })
                            </td>
                            @{
                    if (WorkContext.RoleID == 1)
                    {
                        <text>
                            <th>
                                分公司
                            </th>
                            <td>
                                <select class="ddl" id="BranchID" name="BranchID">
                                    <option @if (0 == AliceDAL.UrlParam.GetIntValue("BranchID")) { <text> selected="selected" </text>            } value="0">请选择</option>
                                    @{
List<Models.BD_Branch> lists = ViewData["branchlist"] as List<Models.BD_Branch>;
if (lists != null)
{
    foreach (Models.BD_Branch item in lists)
    {
        <option @if (item.ID == AliceDAL.UrlParam.GetIntValue("BranchID")) { <text> selected="selected" </text>            } value="@item.ID">@item.Title</option>
    }
}
                                    }
                                </select>
                            </td></text>
                    }
                            }
                            <th>
                                商家
                            </th>
                            <td>
                                <select class="ddl" id="BusID" name="BusID">
                                    <option @if (0 == AliceDAL.UrlParam.GetIntValue("BusID")) { <text> selected="selected" </text>       } value="0">选择商家</option>
                                    @{
List<Models.BD_Business> list = ViewData["businessList"] as List<Models.BD_Business>;
if (list != null)
{
    foreach (Models.BD_Business item in list)
    {
        <option @if (item.ID == AliceDAL.UrlParam.GetIntValue("BusID")) { <text> selected="selected" </text>       } value="@item.ID">@item.BusinessName</option>
    }
}
                                    }
                                </select>
                            </td>
                            <th>
                                卡号前缀
                            </th>
                            <td>
                                @Html.TextBox("txtPrefix", AliceDAL.UrlParam.GetStringValue("txtPrefix"), new { @class = "txt", style = "width:100px" })
                            </td>
                            <td>
                                <input type="submit" id="btnSearch" class="btnSearch" value="搜索" />
                                <input type="submit" id="btnSearch1" name="btnSearch" class="btnSearch" value="导出表格" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div class="dgvlist">
            <table class="gv" cellspacing="0" id="gv" style="border-collapse: collapse;">
                <tr class="gvHeader" style="white-space: nowrap;">
                    <th scope="col">
                        卡号
                    </th>
                    <th scope="col">
                        名称
                    </th>
                    <th scope="col">
                        商家
                    </th>
                    <th scope="col">
                        项目
                    </th>
                    <th scope="col">
                        次数
                    </th>
                    <th scope="col">
                        状态
                    </th>
                    <th scope="col">
                        日期
                    </th>
                    <th scope="col">
                        编辑操作
                    </th>
                </tr>
                @foreach (DataRow item in Model.Page)
                {
                    Models.StoreCardState scs = (Models.StoreCardState)AliceDAL.DataType.ConvertToInt(item["CardState"].ToString());
                    <tr class="gvRow">
                        <td style="width: 120px;text-align:center">
                            @item["CardNo"].ToString()
                        </td>
                        <td>
                            @item["Title"].ToString()
                        </td>
                        <td style="width:250px; font-size: 12px">
                            @item["BranchName"].ToString() (@item["BusinessName"].ToString())
                        </td>
                        <td style="width: 200px">
                            @item["ItemTitle"].ToString() (@item["ItemPrice"].ToString())
                        </td>
                        <td style="width: 60px;text-align:center">
                            @item["CardCount"].ToString()
                        </td>
                        <td style="width: 60px;text-align:center">
                            @switch (scs)
                            {
                                case Models.StoreCardState.Normal:
                                    @:<span style="color:#047548">正常</span>
                                    break;
                                case Models.StoreCardState.Userd:
                                @:<span style="color:#ffd800">已使用</span>
                                    break;
                                case Models.StoreCardState.Discard:
                                @:<span style="color:#808080">作废</span>
                                break;
                                default:
                                break;
                            }
                        </td>
                        <td style="width: 130px;text-align:center">
                            @item["CDate"].ToString()
                        </td>
                        <td align="center" style="width: 100px">

                            @if (item["CardState"].ToString() == "10")
                            {
                                @Html.ActionLink("编辑", "VipCardEdit", new { sid = item["ID"], page = Model.Page.CurrentPageIndex }, new { @class = "abtn edit" })
                                
                            }
                            @Html.ActionLink("作废", "CardChangeState", new { sid = item["ID"], page = Model.Page.CurrentPageIndex }, new { @class = "abtn edit", @onclick = "return confirm('作废后不可恢复且不可兑换，确定？');" })
                        </td>
                    </tr>
                }
            </table>
            <div>
                @Html.Pager(Model.Page, new PagerOptions { PageIndexParameterName = "page", PagerItemsSeperator = "", CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>", ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false }, new { id = "badoopager" })
                @{Html.RegisterMvcPagerScriptResource();}
            </div>
        </div>
    </div>
}
