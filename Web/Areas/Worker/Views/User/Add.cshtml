@model Models.BD_Admin
@{
    Layout = "~/Areas/AliceChopper/Views/Shared/_AdminLayout.cshtml";
}
@section header{
    <script type="text/javascript">
        function checklogin() {
            if ($("#LoginID").val() == "") {
                window.alert("请输入登录名！");
                return false;
            } else if ($("#Password").val() == "") {
                window.alert("请输入密码！");
                return false;
            }
            return true;
        }
    </script>
}
@section body{
    @using (Html.BeginForm())
    {<table class="frm">
        <tr>
            <td colspan="2" class="pagetit">
                <h1>
                    添加用户</h1>
            </td>
        </tr>
        <tr>
            <th>
                登录名
            </th>
            <td>@Html.TextBoxFor(x => x.LoginID, new { @class = "txt" })
                <span style="color: #f00">*@Html.ValidationMessageFor(model => model.LoginID)</span>登录名具有唯一性，不可更改
            </td>
        </tr>
        <tr>
            <th>
                密码
            </th>
            <td>@Html.PasswordFor(model => model.Password, new { @class = "txt" })
                <span style="color: #f00">*</span>留空则不修改
            </td>
        </tr>
        <tr>
            <th>
                昵称
            </th>
            <td>@Html.TextBoxFor(model => model.NickName, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.NickName)
            </td>
        </tr>
        <tr>
            <th>
                &nbsp;
            </th>
            <td>
                <input id="btnSure" class="btn" value="确定" type="submit" onclick="return checklogin();" />
            </td>
        </tr>
    </table> }
}
