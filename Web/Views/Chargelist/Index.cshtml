@model Web.Models.ChargeTypeListModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>小熊洗车</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <link type="text/css" href="@Url.Content("~/Content/bear/css/base.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/bear/css/main.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/bear/css/weui.min.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"></script><script src="/Scripts/layer/layer.js"></script>
<script src="@Url.Content("~/Scripts/bear.js?v=20")"></script>
    <script src="@Url.Content("~/Scripts/buy.js")"></script>
</head>
<body ontouchstart>
    <div class="bluehead"><a href="@Url.Action("Index","BearClient")" class="back"></a><span>充值套餐</span></div>
    <div class="weui_cells_title">点击选择套餐</div>
    <div class="weui_cells weui_cells_radio">
        @if (Model.list != null)
        {
            for (int i = 0; i < Model.list.Count; i++)
            {
                <label class="weui_cell weui_check_label" for="@Model.list[i].ID">
                    <div class="weui_cell_ft" style="width: 1.5em; padding-right: 15px">
                        @if (i == 0)
                        {
                            <input type="radio" class="weui_check" name="typeid" checked="checked" id="@Model.list[i].ID" value="@Model.list[i].ID" />}
                        else
                        {
                            <input type="radio" class="weui_check" name="typeid" id="@Model.list[i].ID" value="@Model.list[i].ID" />
                        }

                        <span class="weui_icon_checked"></span>
                    </div>
                    <div class="weui_cell_bd weui_cell_primary">
                        <p>@Model.list[i].Title &nbsp;&nbsp;(@Model.list[i].Price.ToString("0") 元)</p>
                    </div>
                    <div class="weui_cell_ft"></div>
                </label>
            }
        }
        <label class="weui_cell weui_check_label" for="999">
            <div class="weui_cell_ft" style="width: 1.5em; padding-right: 15px">
                <input type="radio" class="weui_check" name="typeid" id="999" value="999">
                <span class="weui_icon_checked"></span>
            </div>
            <div class="weui_cell_bd weui_cell_primary">
                <p>
                    其他金额 &nbsp;&nbsp;<input class="inpprice" id="price" name="price" type="text" placeholder="金额" onkeyup="this.value=this.value.replace(/[^\d]/g,'')" maxlength="4" /> 元
                </p>
            </div>
            <div class="weui_cell_ft">(其它金额)</div>
        </label>
    </div>
    <div class="weui_btn_area">
        <input id="wxpay" class="weui_btn weui_btn_primary" type="button" onclick="wxpay()" value="微信支付">
    </div>
    <div class="weui_cells_title">会员卡充值</div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">卡号</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" id="cardno" name="cardno" placeholder="请输入卡号" />
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">密码</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="password" id="cardpwd" name="cardpwd" placeholder="请输入密码" />
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">车牌号</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" id="plate" name="plate" placeholder="请输入车牌号" />
            </div>
        </div>
    </div>
    <div class="weui_btn_area">
        <input id="vipcard" class="weui_btn weui_btn_primary" type="button" onclick="vipex()" value="充值">
    </div>@Html.Partial("menu")
</body>
</html>
